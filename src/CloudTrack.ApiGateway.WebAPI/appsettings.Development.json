{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },

  "ReverseProxy": {
    // Routes tell the proxy which requests to forward
    "Routes": {
      "CompetRoute": {
        "ClusterId": "CompetCluster",
        "Match": {
          "Path": "/api/compet-svc/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "RegstrRoute": {
        // matches /something/* and routes to 2 external addresses
        "ClusterId": "RegstrCluster",
        "Match": {
          "Path": "/api/regstr-svc/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      }
    },
    // Clusters tell the proxy where and how to forward requests
    "Clusters": {
      "CompetCluster": {
        "Destinations": {
          "default": {
            "Address": "http://cloudtrack-compet"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      },
      "RegstrCluster": {
        "Destinations": {
          "default": {
            "Address": "http://cloudtrack-regstr"
          }
        },
        "LoadBalancingPolicy": "RoundRobin"
      }
    }
  }
}
